/* CSS Document for test.html */

a:link
{
    color:#60B9CE;
    text-decoration:none;
}

a:hover
{
    color:#B764D4;
    text-decoration:underline;
}


body
{
    background-color:#04819E;
    background-image:url('http://undergraduated.com/wp-content/uploads/2010/06/wall-street-sign-300x225.jpg');
    background-repeat:no-repeat;
    background-position:bottom right;
}

/* trying to make the header a certain color */

/* classes */

.button
{
    display:block;
    background-color:#98bf21;
    padding:4px;
    font-weight:bold;
    text-align:center;
}

/* tables */

#investments
{
    border-style:outset;
    border-width:medium;
    background-color:C5C5C5;
}

#investments td
{
    border: 2px solid grey;
    text-align:right;
    padding:5px;
    border-collapse:collapse;
}

#investments td
{
    /*background-color:#696909;*/
}

#investments .alt
{
    color:#FEFEFA;
    background-color:#3808B8;
}

/* specific items */

#lmenu
{
    border: 2px solid grey;
    border-radius:15px;
    position:fixed;
    top:50px;
    left:10px;
    box-shadow: 4px 4px 2px #888888;
}

#lmenu a
{
    background-color:transparent;
}

#fancymenu
{
    position:fixed;
    top:150px;
    left:10px;
}

.fancybutton
{
    display:block;
    background-color:grey;
    padding:2px;
    font-weight:bold;
    text-align:center;
    width:100px;
    -webkit-transition: width 1s;
}

.fancybutton:hover
{
    width:150px;
    -webkit-transition: width .5s;
}

#container
{
    width:1000px;
    position:relative;
    left:100px;
}

#top
{
    background-color:#ECFC00;
    box-shadow: 10px 10px 5px #888888;
}

#middle
{
    background-color:#015367;
    border-width:20px;
    border-style:inset;
    border-color:98bf21;
}

#bottom
{
    background-color:#7E07A9;
}

div.navbar ul
{
    list-style-type:none;
    margin:0;
    padding-top:5px;
    padding-bottom:5px;
}

div.navbar li
{
    float:left;
}

div.navbar a
{
    display:block;
    width:160px;
    font-weight:bold;
    background-color:grey;
    color:white;
}

div.intro
{
    color:sienna;
    margin-left:10px;
    max-height:300px;
}

div.left
{
    float:left;
    height:100px;
    width:200px;
    margin:0;
    padding:1em;
    background-color:white;
}

div.right
{
    height:100px;
    margin-left:230px;
    border-left:3px solid gray;
    background-color:white;
    padding:1em;
}

#header
{
    color:#60B9CE;
    background-color:#ECFC00;
}

h1
{
    text-align:center;
    font-family:"Times New Roman", Times, serif;
    font-size:200%;
}

p
{
    font-family:"Helvetica", sans-serif;
}

iframe
{
    width:900;
    height:1000;
    frameborder:200;
}

#mo
{
    position:relative;
    left:25%;
}

.menu
{
    color:white;
    clear:both;
    text-align:right
}

#ticker
{
    color:#F5FD72;
    text-decoration:blink;
    text-transform:uppercase;
    font-style:italic;
}

#sitetabs
{
    position:relative;
    width:900;
    height:1000;
}

#sitetabs h3
{
    padding:5px;
    height:30px;
    text-align:center;
    cursor:hand;
    display:block;
    font-size:16px;
    font-weight:bold;
    margin:0;
}

#tab1 iframe
{
    z-index:2;
    background:#fff;
    position:absolute;
    left:0;
    top:0;
}

#tab2 iframe
{
    z-index:1;
    background:#fff;
    position:absolute;
    left:0;
    top:0;
}

#tab3 iframe
{
    z-index:0;
    background:#fff;
    position:absolute;
    left:0;
    top:0;
}

#sitetabs:hover h3
{
    background:none;
    z-index:0;
}

#sitetabs:hover div
{
    z-index:0;
    opactiy:0;
    -webkit-transition:opacity .75s ease-in;
}